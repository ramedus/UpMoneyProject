@model IEnumerable<UpMoneyProjesi.Models.MySubscribe>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubscribeValue)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.SubscribeType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubscribeValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscribeType.SubscribeName)
            </td>
            <td>
                <form asp-action="EditSubscribe" asp-route-id="@item.SubscribeId" method="post" onsubmit="return confirm('Are you sure you want to delete this subscribe?');">
                    <button type="submit" class="btn btn-link" style=" margin-right: 50px;">Delete</button>
                </form>

            </td>
        </tr>
        }
    </tbody>
</table>


